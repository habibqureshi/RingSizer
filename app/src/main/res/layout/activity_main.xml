<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a2b3b"
    tools:context="c.habibqureshi.coinsizecalculator.MainActivity">
    <TextView
        android:id="@+id/tittle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="26dp"
        android:textColor="#ffffff"
        android:text="Ring Sizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tittle"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="Place your ring on the circle \nor your finger between the lines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/circle"
        android:layout_centerInParent="true"
        android:src="@drawable/circle"
        android:layout_width="140px"
        android:layout_height="140px" />
    <ImageView
        android:background="@drawable/side"

        android:id="@+id/sideCircle"
        android:layout_centerVertical="true"

        android:layout_width="70px"
        android:layout_height="140px" />



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:orientation="vertical">

        <LinearLayout



            android:id="@+id/uper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="70px"

            android:background="#ffffff"
            android:contentDescription="70">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="70px"

            android:id="@+id/below"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
           >

            <View

                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_above="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/inch"
            android:textColor="#ffffff"
            android:text="Ring Size: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#ffffff"
            android:text="The size is inside circumference in MM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/buttons"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/dec"
            android:layout_margin="10dp"
            android:text="Reduce"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/inc"
            android:layout_margin="10dp"
            android:text="Enlarge"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>
